      fsType = "zfs";
    };

  fileSystems."/var/log" =
    { device = "zroot/nixos/var/log";
      fsType = "zfs";
    };

  fileSystems."/var/spool" =
    { device = "zroot/nixos/var/spool";
      fsType = "zfs";
    };

  fileSystems."/root" =
    { device = "zroot/userdata/home/root";
      fsType = "zfs";
    };

  fileSystems."/home" =
    { device = "zroot/userdata/home";
      fsType = "zfs";
    };

  fileSystems."/home/stary" =
    { device = "zroot/userdata/home/stary";
      fsType = "zfs";
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/1BDB-8E0D";
      fsType = "vfat";
    };

  fileSystems."/data" =
    { device = "bigger/data";
      fsType = "zfs";
