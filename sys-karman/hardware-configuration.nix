    { device = "/data/syncthing";
      fsType = "none";
      options = [ "bind" ];
    };

  fileSystems."/data/media" =
    { device = "bigger/data/media";
      fsType = "zfs";
    };

  fileSystems."/export/media" =
    { device = "/data/media";
      fsType = "none";
      options = [ "bind" ];
    };

  fileSystems."/var/lib/libvirt/images" =
    { device = "bigger/data/vm-disks";
      fsType = "zfs";
    };

  fileSystems."/data/rtorrent" =
    { device = "bigger/data/torrent";
      fsType = "zfs";
    };

  fileSystems."/data/misc" =
    { device = "bigger/data/misc";
      fsType = "zfs";
    };

  swapDevices = [ ];

  hardware.cpu.intel.updateMicrocode = lib.mkDefault config.hardware.enableRedistributableFirmware;
